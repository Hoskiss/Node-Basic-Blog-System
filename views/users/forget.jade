extends layout

head
  title= 'Forget Password'

block content
  div(style='float:left;margin:10px;')
    a(href='/') Home

  div(style='float:right;')
    a(href='/signin', style='margin:10px;') Register
    a(href='/forget', style='margin:10px;') Login

  div(style='padding:50px;')
    form(name="login", action="/apis/login", method="post")
      h1 Forget Password
      div
        p
          label(style='padding-right:50px') Username or e-mail
          input(type="text", name="user",
          placeholder="username@example.com")
        p
          label(style='padding-right:210px')
          input(type="submit", name="submit", value="Forget Password")
